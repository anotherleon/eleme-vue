body, html
  width: 100%
  min-height: 100%
  height: 100%; /*IE6不识别min-height*/
  line-height: 1
  font-weight: 400
  font-family: 'Helvetica','PingFang SC', 'Helvetica-Light', 'Roboto','Noto','arial', 'sans-serif'

.clearfix
	display: inline-block
	&::after
		display: block
		content: " "
		height: 0
		line-height: 0
		clear: both
		visibility: hidden